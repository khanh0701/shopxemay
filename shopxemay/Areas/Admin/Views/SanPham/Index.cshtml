@model IEnumerable<shopxemay.Models.SanPham>

@{
    ViewBag.Title = "Quản Lý Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh Mục Sản Phẩm</h2>



<p>
    @Html.ActionLink("Tạo SP Mới", "Create")
</p>

@using (Html.BeginForm("Index", "SanPham", FormMethod.Get))
{

      @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
    <input type="submit" value="tìm kiếm" />
    


}
<p></p>
<table class="table table-bordered table-striped">

    <tr>
        <th class="text-center" style="width:20px;">
            Mã SP
        </th>
        <th class="text-center">
            Tên SP
        </th>
        <th class="text-center">
            Mô tả 1
        </th>

        <th class="text-center">
            Giá Bán
        </th>
        <th class="text-center">
            Ngày cập nhật
        </th>
        <th class="text-center">
            Hình
        </th>
        <th class="text-center">
            Số lần mua
        </th>
        <th class="text-center">
            trạng Thái
        </th>
        <th class="text-center" style="width:20px;">
            Tồn Kho
        </th>

        <th class="text-center">
            Các Chức năng
        </th>

        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa1)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCapNhat)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Hinh)" width="50%" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SolanMua)
            </td>
            <td>
                @if (item.TrangThai == true)
                {
                    <a href="@Url.Action("Trạng Thái", "SanPham", new { id = item.MaSP })" class="btn btn-sm btn-success"><i class="fas fa-toggle-on"></i></a>
                }
                else
                {
                    <a href="@Url.Action("Trạng Thái", "SanPham", new { id = item.MaSP })" class="btn btn-sm btn-danger"><i class="fas fa-toggle-off"></i></a>
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TonKho)
            </td>

            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaSP }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSP }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaSP })
            </td>
        </tr>
    }

</table>
